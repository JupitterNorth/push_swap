NAME = push_swap

#--------------------------------------------------------------------------------
#-----------------------------LIBFT SOURCE FILES---------------------------------
#--------------------------------------------------------------------------------

LIBFT_PATH = ./libft


LIBFT = $(LIBFT_PATH)/libft.a

$(LIBFT):
	@$(MAKE) -C $(LIBFT_PATH) --no-print-directory
	
#--------------------------------------------------------------------------------
#-----------------------------------MAIN FILES-----------------------------------
#--------------------------------------------------------------------------------

MAINSOURCES = \
main.c

SOURCES = $(MAINSOURCES)

OBJECTS = $(SOURCES:.c=.o)
	
#--------------------------------------------------------------------------------
#----------------------------PROJECT SOURCE FILES--------------------------------
#--------------------------------------------------------------------------------

PROJECT_PATH = ./push_swap_files

PROJECT_HEADERS = \
$(PROJECT_PATH)/push_swap.h



#--------------------------------------------------------------------------------
#--------------------------COMPILATION SPECIFICATIONS----------------------------
#--------------------------------------------------------------------------------

CC = cc
CFLAGS = -Wall -Wextra -Werror -I$(LIBFT_PATH)

#--------------------------------------------------------------------------------
#---------------------------------MAKEFILE RULES---------------------------------
#--------------------------------------------------------------------------------

all: $(NAME)

$(NAME): $(OBJECTS) $(LIBFT)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJECTS) $(LIBFT)
	@clear
	@echo "\033[32m\n----------$(NAME) compiled and ready!----------"

clean:
	@rm -f $(OBJECTS) $(NAME)
	@$(MAKE) -C $(LIBFT_PATH) clean --no-print-directory
	@clear
	@echo "\033[31m\033[33m\n----------program objects cleaned----------\033[0m"

fclean: clean
	@rm -f $(NAME)
	@$(MAKE) -C $(LIBFT_PATH) fclean --no-print-directory
	@clear
	@echo "\033[31m\033[33m\n---------program name and objects cleaned----------\033[0m"
re: fclean all